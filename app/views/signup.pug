extends layout

block content
  img.loginstyle(src='/icons/icononly.png' alt='Fit of the Day Logo')
  h1 Fit of the Day - Sign Up
  main(role='main')
    if error
      p.error There was an error with registration
    .formblock
      form#signupform(action='/signup' method='POST')
        label(for='email') Email
        input#email(type='email' name='email' placeholder='email' autofocus)
        label(for='username') Username
        input#username(type='text' name='username' placeholder='username')
        label(for='password') Password
        input#password(type='password' name='password' placeholder='password')
        input(type='submit' value='Sign Up')
