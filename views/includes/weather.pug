.weatherWidget
  unless weather == 'Weather Unavailable' 
    .info 
      span.city #{weather.city} #[button(type="button" id="locate-me" title="Use Current Location").emoji-btn &#x1F9ED; #[span(class="screen-reader") Use Current Location]]
      span.desc #{weather.weatherPattern}
    .data
      img(src='http://openweathermap.org/img/wn/' + weather.icon + '.png')
      .temp
        span.num #{weather.current}
        span.unit ÂºF
  else
    span Weather Unavailable
  script(src="/scripts/weather_widget.js")

//-   //- Use weather.'option' to call a specific variable
//-   //- Options are: city, high, low, current, feelsLike, weatherPattern, tempAverage, rainChance (shown in a %), and icon
//-   //- for icon, use the image source http://openweathermap.org/img/w/***.png where *** calls '${weather.icon}'