extends layout

block content
  include includes/internal-nav
  main
    section.item-card
      .item-image
        img(src='/user_img/liam/'+article.filepath)
      .item-details
        header
          h1(class='name') #{article.name}
        p(class='desc') #{article.desc}
        div This item is :
          ul
            li #{article.color}
            if article.dirty
              li dirty
            else
              li clean
            li #{article.garment_type}
            li #{article.dress_code}

        .options
          a(role='button' href='article/edit?id='+article.article_id) Edit
        