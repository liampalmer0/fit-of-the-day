extends layout

block content
  include includes/internal-nav
  .container
    a.buttonright(href='/settings') 
      img(src='/icons/aboutbutton.png' alt='About this app button')
    a.buttonright(href='/closet') 
      img(src='/icons/passwordbutton.png' alt='Change password button')
    a.buttonright(href='/closet') 
      img(src='/icons/aboutbutton.png' alt='About this app button')
    a.buttonright(href='/closet') 
      img(src='/icons/helpbutton.png' alt='Help with this app button')
  button#locate-me(type='button') Use Current Location
  form#weatherZipCode(method='post')
    label(for='zipCode') Set new zip code
    input#zipCodeInput(
      type='text'
      name='zipCodeInput'
      placeholder='zip code'
      pattern='[0-9]*'
      maxlength='5'
    )
    input#submitZipCode(type='submit' value='Save') 

  p.msg
  script(src='/scripts/account_page.js')
